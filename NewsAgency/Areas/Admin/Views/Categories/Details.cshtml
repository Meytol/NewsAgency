@model DataAccessLayer.Entities.Category

@{
    ViewData["Title"] = "ریز جزئیات";
    Layout = "_AdminLayout";
}

<h2>ریز جزئیات دسته بندی</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            شناسه والد
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ParentId)
        </dd>
        <dt>
            عنوان
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            ساخته شده توسط
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt>
            ساخته شده در
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt>
            وضعیت نمایش
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ViewState)
        </dd>
    </dl>
</div>
<div>
    <a @Url.Action("Edit" , "Categories", new {@Area = "Admin",@id=@Model.Id}) >تغییر مشخصات</a> |
    <a @Url.Action("Index", "Categories", new { @Area = "Admin"}) >بازگشت</a>
</div>
