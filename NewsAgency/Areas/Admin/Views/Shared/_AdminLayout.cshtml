@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="fa">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    @if (string.IsNullOrWhiteSpace(ViewData["Title"].ToString()))
    {
        <title>
            پنل ادمین خبرگزاری اخبار موثق
        </title>
    }
    else
    {
        <title>
            پنل ادمین اخبار موثق - @ViewData["Title"]
        </title>
    }

    <!--Favicon-->
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">


    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Style/AdminTemplate/bootstrap-theme.css">
    <!-- Bootstrap rtl -->
    <link rel="stylesheet" href="~/Style/AdminTemplate/rtl.css">
    <!-- Font Awesome -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />

    <!-- Ionicons -->
    <link rel="stylesheet" href="~/lib/bower_components/Ionicons/css/ionicons.min.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/lib/bower_components/jvectormap/jquery-jvectormap.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="~/Style/AdminTemplate/AdminLTE.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
    folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Style/AdminTemplate/skins/_all-skins.min.css">
    
    <!-- SweetAlert2 -->
    <link href="~/lib/sweetalert2/css/sweetalert2.min.css" rel="stylesheet" />


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    
    
    @RenderSection(name: "PluginStyles", required: false)

    @RenderSection(name: "Styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

<header class="main-header">
<!-- Logo -->
<a href="@Url.Action("Index","Home",new {@area = "Admin"})" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">
        <i class="fad fa-cogs"></i>
    </span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>پنل مدیریت</b></span>
</a>
<!-- Header Navbar: style can be found in header.less -->
<nav class="navbar navbar-static-top">
<!-- Sidebar toggle button-->
<a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
    <span class="sr-only">Toggle navigation</span>
</a>

<div class="navbar-custom-menu">
<ul class="nav navbar-nav">
<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <img src="~/images/news/user1.png" class="user-image" alt="User Image">
        <span class="hidden-xs">سوپر ادمین</span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            <img src="~/images/news/user1.png" class="img-circle" alt="User Image">

            <p>
                سوپرادمین
                <small>مدیریت کل سایت</small>
            </p>
        </li>
    </ul>
</li>
<!-- Control Sidebar Toggle Button -->
<li>
    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
</li>
</ul>
</div>
</nav>
</header>
<!-- right side column. contains the logo and sidebar -->
<aside class="main-sidebar">
<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
        <div class="pull-right image">
            <img src="~/images/news/user1.png" class="img-circle" alt="User Image">
        </div>
        <div class="pull-right info">
            <p>سوپرادمین</p>
            <a href="#"><i class="fa fa-circle text-success"></i> آنلاین</a>
        </div>
    </div>

    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
        <li class="header">منو</li>

        <li class="treeview">
            <a href="#">
                <i class="fa fa-files-o"></i>
                <span>
                    اخبار
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="@Url.Action("Index","News")"><i class="fa fa-circle-o"></i> لیست</a></li>
                <li><a href="@Url.Action("Create","News")"><i class="fa fa-circle-o"></i> ساخت</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#">
                <i class="fa fa-files-o"></i>
                <span>
                    کاربر
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="@Url.Action("Index","User")"><i class="fa fa-circle-o"></i> لیست</a></li>
                <li><a href="@Url.Action("Create","User")"><i class="fa fa-circle-o"></i> ساخت</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#">
                <i class="fa fa-files-o"></i>
                <span>
                    دسته بندی
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="@Url.Action("Index","Categories")"><i class="fa fa-circle-o"></i> لیست</a></li>
                <li><a href="@Url.Action("Create","Categories")"><i class="fa fa-circle-o"></i> ساخت</a></li>
            </ul>
        </li>
    </ul>
</section>
<!-- /.sidebar -->
</aside>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @RenderBody()
</div>
<!-- /.content-wrapper -->
<footer class="main-footer text-left">
    <strong>CopyRight &copy; 2014- @DateTime.Now.Year <a href="https://adminlte.io">Almsaeed Studio</a> & <a href="http://hosseinizadeh.ir/adminlte">Alireza Hosseinizadeh</a></strong>
</footer>

<!-- Add the sidebar's background. This div must be placed
immediately after the control sidebar -->
<div class="control-sidebar-bg"></div>
</div>

<!-- /.control-sidebar -->
<!-- jQuery 3 -->
<script src="~/lib/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/lib/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- FastClick -->
<script src="~/lib/bower_components/fastclick/lib/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="~/Script/AdminTemplate/adminlte.min.js"></script>
<!-- Sparkline -->
<script src="~/lib/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
<!-- jvectormap  -->
<script src="~/lib/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
<script src="~/lib/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
<!-- SlimScroll -->
<script src="~/lib/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- ChartJS -->
<script src="~/lib/bower_components/Chart.js/Chart.js"></script>
<!-- SweetAlert2 -->
<script src="~/lib/sweetalert2/js/sweetalert2.all.min.js"></script>

@RenderSection(name: "Plugins", required: false)
@RenderSection(name: "Scripts", required: false)
</body>
</html>
