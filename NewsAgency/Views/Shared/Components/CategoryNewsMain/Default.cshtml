        <span>Category Tite</span>
    </h3>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="post-block-style clearfix">
                @{
                    var firstNews = @Model.CategoryNewsViewModels.FirstOrDefault();
                
                    <div class="post-thumb">
                    <a href="@Url.Action(nameof(Index),"News",new {@id = firstNews.NewsId})">
                        <img class="img-responsive" src="@firstNews.ImageUrl" alt="@firstNews.NewsTitle">
                    </a>
                </div>
                <a class="post-cat" href="@Url.Action(nameof(Index),"Category",new {@id = firstNews.CategoryId })">@firstNews.CategoryTitle</a>
                <div class="post-content">
                    <h2 class="post-title title-medium">
                        <a href="@Url.Action(nameof(Index), "News", new {@id = firstNews.NewsId})">
                             @firstNews.NewsTitle
                        </a>
                    </h2>
                    <div class="post-meta">
                        <span class="post-author">
                            <a href="@Url.Action(nameof(Index),"Author",new {@id = firstNews.AuthorId})">@firstNews.Author</a>
                        </span>
                        <span class="post-date">@firstNews.CreatedOn.ToLongDateString()</span>
                    </div>
                    <p>
                        @firstNews.NewsHeadLine
                    </p>
                </div><!-- Post content end -->
                }
            </div><!-- Post Block style end -->
        </div><!-- Col end -->

        <div class="col-md-6 col-sm-6">
            <div class="list-post-block m-top-0">
                <ul class="list-post">
                    
                    @for (int i = 1; i < @Model.CategoryNewsViewModels.Count(); i++)
                    {
                        var item = @Model.CategoryNewsViewModels.ElementAtOrDefault(i);
                        <li class="clearfix">
                            <div class="post-block-style post-float clearfix">
                                <div class="post-thumb">
                                    <a href="@Url.Action(nameof(Index),"News",new {@id = item.NewsId})">
                                        <img class="img-responsive" src="@item.ImageUrl" alt="@item.NewsTitle">
                                    </a>
                                    <a class="post-cat" href="@Url.Action(nameof(Index),"Category",new{@id = item.CategoryId})">@item.CategoryTitle</a>
                                </div><!-- Post thumb end -->

                                <div class="post-content">
                                    <h2 class="post-title title-small">
                                        <a href="@Url.Action(nameof(Index),"News",new {@id = item.NewsId})">
                                            @item.NewsTitle
                                        </a>
                                    </h2>
                                    <div class="post-meta">
                                        <span class="post-date">@item.CreatedOn.ToLongDateString()</span>
                                    </div>
                                </div><!-- Post content end -->
                            </div><!-- Post block style end -->
                        </li>
                    }

                </ul><!-- List post end -->
            </div><!-- List post block end -->
        </div><!-- List post Col end -->

    </div><!-- Row end -->
