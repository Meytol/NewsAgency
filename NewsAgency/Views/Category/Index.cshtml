@section Scripts
{
    <script>
        $(document).ready(function () {
            GetNewses(@ViewBag.CategoryId, 1);
        });

        function ChangePage(pageNum) {
            GetNewses(@ViewBag.CategoryId, pageNum);
        }

        function GetNewses(categoryId, page) {

            $.ajax({
                url: "@Url.Action("GetNews","Category")",
                type: "GET",
                data: {
                    categoryId: categoryId,
                    quentity: 6,
                    page: page
                },
                async: false,
                success: function (result) {
                    $("#CategoryNewsPage").html("");
                    $("#CategoryNewsPage").html(result);
                }
            });
        }

    </script>
}
